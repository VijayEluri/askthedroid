<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/pleyades">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:gravity="center">
		<ImageView android:id="@+id/background"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_margin="20px" android:gravity="center_vertical"
			android:src="@drawable/crystal_ball" />
		<Button android:id="@+id/ask" android:layout_width="200px"
			android:layout_height="50px" android:gravity="center"
			android:padding="15px" android:layout_alignParentBottom="true"
			android:text="@string/title_ask" />
	</LinearLayout>
</RelativeLayout>
